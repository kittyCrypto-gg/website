{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": false,
        "removeComments": false,
        "verbatimModuleSyntax": true
    },
    "include": ["src"]
}